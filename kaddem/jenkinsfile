pipeline {
    agent any

    tools {
        maven 'Maven 3.8.5' // Assure-toi que cette version existe dans Jenkins > Global Tool Configuration
        jdk 'JDK 17'         // Idem : configure une JDK dans Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }
    }

    post {
        success {
            echo 'Build succeeded!'
        }
        failure {
            echo 'Build failed.'
        }
    }
}

