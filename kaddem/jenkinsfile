pipeline {
    agent any

    stages {
        stage('Install dependencies') {
            steps {
                script {
                    sh ('nvm install')
                }
            }
        }

        stage('Unit Test') {
            steps {
                script{
                sh('nvm test')
                }
            }
        }

stage('Build application'){
steps{
script{
sh('nvm run build-dev')
}
}
}

    }
}
