pipeline {
    agent any

    tools {
    maven 'M2_HOME'

    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'MtaallahKhalil-4TWIN2-G6',
                    url: 'https://github.com/khalil27/4TWIN2-G6-Kaddem.git'
            }
        }

        stage('Build') {
            steps {
            dir('kaddem') {
                sh 'mvn clean compile'
                }
            }
        }

        stage('Run Unit Tests') {
            steps {
            dir('kaddem') {
                sh 'mvn test'
                }
            }
        }
    }
}
