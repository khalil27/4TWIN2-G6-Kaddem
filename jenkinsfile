pipeline {
    agent any

    tools {
    maven 'M2_HOME'

    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'YosrMekki-4TWIN2-G6',
                    url: 'https://github.com/khalil27/4TWIN2-G6-Kaddem.git'
            }
        }

        stage('Build') {
            steps {
            dir('kaddem/kaddem') {
                sh 'mvn clean compile'
                }
            }
        }

        stage('Run Unit Tests') {
            steps {
            dir('kaddem/kaddem') {
                sh 'mvn test'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool 'scanner'
                    withSonarQubeEnv {
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }
            }
        }
    }
}
