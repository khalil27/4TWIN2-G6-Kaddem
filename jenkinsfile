pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/khalil27/4TWIN2-G6-Kaddem.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Run Unit Tests') {
            steps {
                sh 'mvn test'
            }
        }
    }
}
